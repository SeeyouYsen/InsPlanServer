# InsPlan 微服务环境变量配置示例
# 复制此文件为 .env 并根据实际环境修改配置

# 数据库配置
DATABASE_PASSWORD=your_secure_database_password
REDIS_PASSWORD=your_secure_redis_password

# JWT 密钥 (生产环境请使用强密钥)
JWT_SECRET=your_super_secret_jwt_key_for_production

# 支付配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_KEY=your_wechat_key

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@insplan.com
FROM_NAME=InsPlan

# 短信配置
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_ENDPOINT=https://dysmsapi.aliyuncs.com
SMS_SIGN_NAME=InsPlan

# 推送通知配置
PUSH_APP_KEY=your_push_app_key
PUSH_APP_SECRET=your_push_app_secret
PUSH_ENDPOINT=https://cloudpush.aliyuncs.com

# 监控配置
PROMETHEUS_RETENTION=15d
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# 日志配置
ELASTICSEARCH_PASSWORD=your_elasticsearch_password
KIBANA_ENCRYPTION_KEY=your_kibana_encryption_key

# SSL 证书路径 (生产环境)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 外部服务配置
CONSUL_HOST=consul
CONSUL_PORT=8500

# 限流配置
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# 缓存配置
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# 文件上传配置
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# 日志级别
LOG_LEVEL=info

# 环境标识
ENVIRONMENT=development
